<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HistoryFragment"
    android:background="@color/main">


        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/toolbar_background_layout"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:background="@drawable/toolbar_bg">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appBarLayout"
                    android:background="@color/main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:elevation="0dp"
                    android:paddingVertical="7.5dp"/>
                <View
                    android:id="@+id/ellipse1"
                    android:layout_width="193dp"
                    android:layout_height="186dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="-68dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="-54dp"
                    android:background="@drawable/elipse"
                    />


                <View
                    android:id="@+id/ellipse2"
                    android:layout_width="195.03dp"
                    android:layout_height="167dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="29dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="-76.03dp"
                    android:background="@drawable/elipse"
                    />

                <View
                    android:id="@+id/image_2"
                    android:layout_width="115dp"
                    android:layout_height="93dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="299dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/logo" />

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="-30dp"
                android:paddingTop="20dp"
                android:backgroundTint="@color/yellow"
                app:cardCornerRadius="50dp"
                app:contentPaddingBottom="30dp">
                    <GridView
                        android:id="@+id/girdView"
                        android:horizontalSpacing="10pt"
                        android:verticalSpacing="10pt"
                        android:numColumns="2"
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                     </GridView>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
</FrameLayout>