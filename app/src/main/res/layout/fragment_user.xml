<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".activity.AboutFragment">
    <View
        android:id="@+id/ellipse1"
        android:layout_width="193dp"
        android:layout_height="186dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-68dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-54dp"
        android:background="@drawable/elipse"
        />


    <View
        android:id="@+id/ellipse2"
        android:layout_width="195.03dp"
        android:layout_height="167dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="29dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-76.03dp"
        android:background="@drawable/elipse"
        />

    <View
        android:id="@+id/image_1"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="299dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/logo" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="87dp"
        android:padding="4dp"
        android:background="@drawable/image"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="215dp"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:fontFamily="@font/trirong_bold_italic"
        android:gravity="center_horizontal|top"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center_horizontal|top"
        />
    <Button
        android:id="@+id/historybtn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="350dp"
        android:drawableLeft="@drawable/historyimg"
        android:text="Lịch sử"
        app:cornerRadius="15dp"
        android:gravity="left|center"
        android:backgroundTint="@color/field"
        />
    <Button
        android:id="@+id/notificationbtn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/notification"
        android:text="Thông báo"
        android:gravity="left|center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="420dp"
        app:cornerRadius="15dp"
        android:backgroundTint="@color/field"
        />
    <Button
        android:id="@+id/feedbackbtn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:drawableLeft="@drawable/feedback"
        android:text="Góp ý -Phản hồi"
        android:gravity="left|center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="490dp"
        app:cornerRadius="15dp"
        android:backgroundTint="@color/field"
        />
    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:text="Đăng xuất"
        app:cornerRadius="25dp"
        android:backgroundTint="@color/field"
        />
</RelativeLayout>